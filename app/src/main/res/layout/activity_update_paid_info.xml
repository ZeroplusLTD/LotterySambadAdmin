<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reports.UpdatePaidInfoActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/device_target_layout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">


            <ImageView
                android:id="@+id/UploadViewBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/tutorial_thumb_up"
                android:layout_margin="@dimen/_15sdp"/>

            <EditText
                android:id="@+id/videoLinkText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/notify_box_backg"
                android:drawablePadding="5dip"
                android:hint="Video link"
                android:padding="10dp" />

            <EditText
                android:id="@+id/PhoneOneText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/notify_box_backg"
                android:drawablePadding="5dip"
                android:hint="Phone 1"
                android:padding="10dp" />
            <EditText
                android:id="@+id/PhoneTwoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/notify_box_backg"
                android:drawablePadding="5dip"
                android:hint="Phone 2"
                android:padding="10dp" />
            <EditText
                android:id="@+id/PhoneThreeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/notify_box_backg"
                android:drawablePadding="5dip"
                android:hint="Phone 3"
                android:padding="10dp" />
            <EditText
                android:id="@+id/whatsAppnumberText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/notify_box_backg"
                android:drawablePadding="5dip"
                android:hint="WhatsApp Number"
                android:padding="10dp" />



        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/device_target_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DDDDDD"
        android:orientation="horizontal">

        <Button
            android:id="@+id/GetUpdate"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save and Update"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="#243280"
            android:layout_above="@+id/device_target_group"/>
    </LinearLayout>


</RelativeLayout>